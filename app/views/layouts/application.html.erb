<!DOCTYPE html>
<html>
  <head>
    <title>Backfeed</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if current_user %>
      <%= link_to "Logout", logout_path %>
    <% else %>
      <%= link_to "Login with Github", github_login_path %>
    <% end %>
    <%= yield %>
  </body>
</html>
